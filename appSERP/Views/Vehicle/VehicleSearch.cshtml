<div class="divContainer bg-light">
    <div class="w-100 bg-white border font-weight-bold p-4">المركبات</div>
    <div class="card">
        <div class="card-header ">
            خيارات البحث
        </div>
        <div class="card-body">
            <div class="divFormControl">
                <div class="row">
                    <div class="col-sm-2">
                        <div>@appResource._Code<input type="text" class="form-control txtCode" /></div>
                    </div>

                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-md-3">
                                حالة المركبة
                                <select id="selectStatus" multiple class="selectStatus form-control" name="VehicleStatusId" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true"></select>
                            </div>
                            <div class="col-md-3">
                                نوع المركبة
                                <select id="selectType" multiple class="selectType form-control" name="VehicleTypeId" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true"></select>
                            </div>
                            <div class="col-md-3">
                                الماركة
                                <select id="selectBrand" multiple class="selectBrand form-control" name="VehicleBrandId" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true"></select>
                            </div>
                            <div class="col-md-3">
                                اللون
                                <select id="selectColor" multiple class="selectColor form-control" name="VehicleColorId" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true"></select>
                            </div>
                        </div>
                    </div>

                    <div class=" col-sm-4">
                        <div class="row">
                            <div class="col-md-6">
                                التاريخ
                                <input type="text" class="form-control txtDate" />
                            </div>
                            <div class="col-md-6">

                            </div>
                        </div>
                    </div>

                    <div class=" col-sm-2">

                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <button type="button" class="btn btn-secondary btnSearch btnSearchh">@appResource.btnSearch</button>

        </div>
    </div>

    <div class="divFormDtl ">
        <table class="table table-bordered table-hover tblVehicleSearch">
            <thead>
                <tr>
                    <th class="btnCheckAll" data-checked="false">
                        تحديد الكل
                        <input type="checkbox" class="btnCheckAll">

                    </th>
                    <th>الكود</th>
                    <th>المركبة </th>
                    <th>التاريخ </th>


                </tr>
            </thead>

            <tbody class="tblVehicleBodySearch"></tbody>
        </table>

    </div>
    <div class="card">
        <div class="card-body">
            <button type="button" class="btn btn-secondary btnSelect">اختيار</button>
        </div>
    </div>
</div>

<script>
    // Actione Load
    $(document).ready(function () {
        $('#selectStatus').append('<option data-id="" value="" sort-id="">-</option>');
        $('#selectType').append('<option data-id="" value="" sort-id="">-</option>');
        $('#selectBrand').append('<option data-id="" value="" sort-id="">-</option>');
        $('#selectColor').append('<option data-id="" value="" sort-id="">-</option>');
        //// Get Row
        //funGetVehicles();
        funGetLists();
    });


    //function Append
    function funVehicleRowConfig(pVehicleRow) {
        // Content
        var RowContent = '<tr data-id="' + pVehicleRow.VehicleId + '">' +
            '<td><input type="checkbox" class="clsChk" name="chkIsValid" data-id="' + pVehicleRow.VehicleId + '"/></td> ' +
            '<td align="center">' + pVehicleRow.VehicleCode + '</td>' +
            '<td align="center">' + pVehicleRow.VecDescL1 + '</td>' +
            '<td align="center">' + pVehicleRow.InitialDate + '</td>' +
            +'</tr > '
