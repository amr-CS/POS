                var vDataResult = JSON.parse(data);
                // Table Body
                var vTableBody = $('.tblBodyLookup');

                console.log(vDataResult)
                // Lookups
                $.each(vDataResult, function (i, LookupData) {

                    var vRowContent = '<tr data-id="' + vDataResult[i].LookupId + '">';

                    var vLookupName = vDataResult[i].SiteNameL1;
                        if ('@clsUser.vUserLanguageId' == '2') {
                            vLookupName = vDataResult[i].SiteNameL1;
                    }
                    console.log(vDataResult[i].AccountIsCostCenter)
                    vRowContent += '<td data-id="' + vDataResult[i].SiteId + '">';
                    vRowContent += '<div class="divDefaultLocationSelect d-flex p-2" data-id="' + vDataResult[i].SiteId + '">';
                    vRowContent += '<div class="divDefaultLocationId d-none px-4">' + vDataResult[i].SiteId + '</div>';
                    vRowContent += '<div class="divAccountId px-4 d-none">' + vDataResult[i].SiteNameL1 + '</div>';
                    vRowContent += '<div class="divDefaultLocationName px-4">' + vDataResult[i].SiteNameL1 + '</div>';


                            vRowContent += '</div>';
                        vRowContent += '</td>';

                    vRowContent += '</tr>';

                    // Append Row Content
                    vTableBody.append(vRowContent);
                })

            })




    }

</script>

<!-- Search Lookup -->
<script>
    // Search
    $('.txtSearch').on('keyup', function () {

        // Search Input
        var vSearchInput = $(this).val();

        // Check Input
        if (vSearchInput) {

            // Check All
            $('.divDefaultLocationSelect').each(function () {

                // Get Lookup Code
                var vLookupCode = $(this).find('.divDefaultLocationId').text();
                var vLookupName = $(this).find('.divDefaultLocationName').text();

                // Check Result
                if (vLookupCode.search(vSearchInput) != -1 || vLookupName.search(vSearchInput) != -1) {

                    // Show Results
                    $(this).addClass('d-flex');
                    $(this).removeClass('d-none');
                }
                else {
                    // Hide
                    $(this).addClass('d-none');
                    $(this).removeClass('d-flex');
                }

            })

        }
        else {
            // Show All
            $(this).removeClass('d-none');
            $(this).addClass('d-flex');
        }
    })
</script>