        //    '<td align="center">' + pVehicleRow.VecDescL2 + '</td>' +
        //    +'</tr > '

        return RowContent
    }

    function funGetVehicles() {
        //$.get('/api/APIVehicle/VehicleGET',
        $.post('/Vehicle/GetVehicle',
            {
                pIsVehicle: true,
                // Query Type Id
                pQueryTypeId: '400',

            }, function (data, status) {
                if (data != undefined && data != '') {
                    // JSON Parse
                    vDataResult = JSON.parse(data);
                    $.each(vDataResult, function (m, VehicleData) {
                        // GET Cash Desk Row Content

                        var vVehicleRowContent = funVehicleRowConfig(vDataResult[m]);

                        // Append Row Content
                        $('.tblVehicleBodySearch').append(vVehicleRowContent);
                    });

                }
            })

    }

    function funGetLists() {
        //$.get('/api/APIVehicle/VehicleGET',
        $.post('/Vehicle/GetSelectLists',
            {
            }, function (data, status) {
                if (data != undefined && data != '') {
                    // JSON Parse
                    vDataResult = JSON.parse(data);
                    var vSelectListStatus = '';
                    var vSelectListType = '';
                    var vSelectListBrand = '';
                    var vSelectListColor = '';
                    for (var m = 0; m < vDataResult[0].VVehicleStatus.length; m++) {
                        var vSelected = '';
                       
                        vSelectListStatus += '<option  value = "' + vDataResult[0].VVehicleStatus[m].CodeId + '"  sort-id="' + m + '" > ' + vDataResult[0].VVehicleStatus[m].LookupDtlDesc + '</option >'
                        
                    }
                    for (var m = 0; m < vDataResult[0].VVehicleType.length; m++) {
                        var vSelected = '';

                        vSelectListType += '<option  value = "' + vDataResult[0].VVehicleType[m].CodeId + '"  sort-id="' + m + '" > ' + vDataResult[0].VVehicleType[m].LookupDtlDesc + '</option >'

                    }
                    for (var m = 0; m < vDataResult[0].VVehicleBrand.length; m++) {
                        var vSelected = '';

                        vSelectListBrand += '<option  value = "' + vDataResult[0].VVehicleBrand[m].CodeId + '"  sort-id="' + m + '" > ' + vDataResult[0].VVehicleBrand[m].LookupDtlDesc + '</option >'

                    }
                    for (var m = 0; m < vDataResult[0].VVehicleColor.length; m++) {
                        var vSelected = '';

                        vSelectListColor += '<option  value = "' + vDataResult[0].VVehicleColor[m].CodeId + '"  sort-id="' + m + '" > ' + vDataResult[0].VVehicleColor[m].LookupDtlDesc + '</option >'

                    }
                  


                    $('#selectStatus').append(vSelectListStatus);
                    $('#selectStatus').selectpicker('refresh');

                    $('#selectType').append(vSelectListType);
                    $('#selectType').selectpicker('refresh');

                    $('#selectBrand').append(vSelectListBrand);
                    $('#selectBrand').selectpicker('refresh');

                    $('#selectColor').append(vSelectListColor);
                    $('#selectColor').selectpicker('refresh');
                }
            })

    }




    $('.btnSearchh').on('click', function () {


        var vVehicleCode = null;
        var vStatus = null;
        var vType = null;
        var vBrand = null;
        var vColor = null;
        var vDate = null;

        if ($('.txtCode').val().trim() != '') {
            vVehicleCode = $('.txtCode').val()
        }
        else {
            vVehicleCode = null
        }

        if ($('#selectStatus').prop('selectedIndex') > 0) {
            vStatus = $('#selectStatus').val()
        }
        else {
            vStatus = null
        }
        if ($('#selectType').prop('selectedIndex') > 0) {
            vType = $('#selectType').val()
        }
        else {
            vType = null
        }
        if ($('#selectBrand').prop('selectedIndex') > 0) {
            vBrand = $('#selectBrand').val()
        }
        else {
            vBrand = null
        }
        if ($('#selectColor').prop('selectedIndex') > 0) {
            vColor = $('#selectColor').val()
        }
        else {
            vColor = null
        }
    
        if ($('.txtDate').val().trim() != '') {
            vDate = $('.txtDate').val()
        }
        else {
            vDate = null
        }


        funGetVehiclesBySearch(vVehicleCode, vStatus, vType, vBrand, vColor, vDate)

    })

