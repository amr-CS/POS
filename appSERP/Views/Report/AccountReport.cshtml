@using appSERP.Views.Shared.appResource;
@using appSERP.appCode.Setting.TimeSetting;
@using appSERP.appCode.Setting.User;
@using System.Data
@{
    ViewBag.Title = "Account";
}
<!-- Master -->
@{ DataTable vDtReportData = ViewBag.vbData; }
<!-- Detail -->
@{ DataTable vDtReportDataDetail = ViewBag.vbDataDetail; }

<!-- Header -->
<div class="divRptViewTitle">
    @Html.Action("Index", "ViewHeader", new { pHeaderTitle = appResource.lblAccountDirectory, pIsNew = false })
</div>

@Html.Action("ReportTemplate", "ReportSetting")

<!-- Report Options -->
<div class="container-fluid divReportOptions">

    <div class="d-flex w-100">
        <div class="d-flex w-75">

        </div>
        <div class="d-flex w-25">
            @*<div class=" w-100 4">*@
            @appResource.AccountNo
            @vDtReportData.Rows[0]["AccountNo"]

        </div>
    </div>
   
    <div class="d-flex w-100">
        <div class="d-flex w-75">

        </div>
        <div class="d-flex w-25">
            @appResource._Date
            @DateTime.Now.Date.ToShortDateString().ToString()
        </div>
    </div>

</div>


<div class="container-fluid table-responsive rptData">
    <table class="table table-bordered table-hover tblData">
        <thead>
            <tr>
                <th>@appResource.AccountNo</th>
                <th>@appResource._Account</th>
                <th>@appResource._Level</th>
                <th>@appResource._Currency</th>
                <th>@appResource.AccountTypeId</th>
            </tr>
        </thead>
        <tbody>
            @if (vDtReportDataDetail != null)
            {
                foreach (DataRow vDrwData in vDtReportDataDetail.Rows)
                {
                    <tr>
                        <td width="10%" align="center">@vDrwData["AccountNo"]</td>
                        @if (clsUser.vUserLanguageId == 1)
                        {
                            <td width="26%" align="center">@vDrwData["AccountNameL1"]</td>
                        }
                        else
                        {
                            <td width="26%" align="center">@vDrwData["AccountNameL2"]</td>
                        }

                        <td width="10%" align="center">@vDrwData["AccountLevel"]</td>
                        @if (clsUser.vUserLanguageId == 1)
                        {
                            <td width="26%" align="center">@vDrwData["CurrencyNameL1"]</td>
                        }
                        else
                        {
                            <td width="26%" align="center">@vDrwData["CurrencyNameL2"]</td>
                        }
                        @if (clsUser.vUserLanguageId == 1)
                        {
                            <td width="26%" align="center">@vDrwData["AccountTypeNameL1"]</td>
                        }
                        else
                        {
                            <td width="26%" align="center">@vDrwData["AccountTypeNameL2"]</td>
                        }


                    </tr>

                }
            }

        </tbody>
    </table>
</div>


<script>
      // Report Title
        $('.divRptTitle').append('@appResource.lblAccountDirectory');
        $('.divRptTitle').append('<br>');
    // Report Options
    var vRptOptions = $('.divReportOptions').html();
    $('.divRptOptions').html(vRptOptions);
    $('.divReportOptions').remove();

    // Table Data Body
    var vRptData = $('.rptData').html();
    $('.tblReportData').html(vRptData);
    $('.rptData').remove();
</script>


