<!-- Search Unit -->
<script>
    // Search
    $('.txtSearch').on('keyup', function () {

        // Search Input
        var vSearchInput = $(this).val();

        // Check Input
        if (vSearchInput) {

            // Check All
            $('.divUnitSelect').each(function () {

                // Get Unit Code
                var vUnitCode = $(this).find('.divItemId').text();
                var vUnitName = $(this).find('.divItemName').text();

                // Check Result
                if (vUnitCode.search(vSearchInput) != -1 || vUnitName.search(vSearchInput) != -1) {

                    // Show Results
                    $(this).addClass('d-flex');
                    $(this).removeClass('d-none');
                }
                else {
                    // Hide
                    $(this).addClass('d-none');
                    $(this).removeClass('d-flex');
                }
            })
        }
        else {
            // Show All
            $(this).removeClass('d-none');
            $(this).addClass('d-flex'); }  })
</script>