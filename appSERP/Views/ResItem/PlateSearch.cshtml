
@model System.Data.DataTable
@using System.Data
@using appSERP.Views.Shared.appResource
@{
    Layout = "~/Views/Shared/appLayout/_ModalLayout.cshtml";
}

<style>
    .divPlate {
        max-height: 80vh;
        overflow: scroll;
    }

    .divPlateSelect {
        cursor: pointer;
        transition: all 0.5s;
    }

    .divPlateSelect:hover {
        font-weight: bold;
        background-color: #2980b9;
        color: #FFF;
    }


</style>

<!-- Header -->
<div class="">
    <div class="w-100 bg-white border font-weight-bold p-4">الصحون</div>
</div>

<!-- Search -->
<div class="">
    <div class="w-100 bg-white border p-4">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fa fa-search"></i></span>
            </div>
            <input type="text" class="form-control txtSearch" placeholder="@appResource.btnSearch">
        </div>
    </div>
</div>
<div class="divPlate">
    <table class="table table-bordered tblPlateData">
        <thead>
            <tr>
                <th>الكود</th>
                <th>الاسم</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Rows.Count > 0)
            {

                foreach (DataRow pData in Model.Rows)
                {

                    <tr class="tblItemRow divPlateSelect" data-changed="0" data-id="@pData["InvItemId"]">

                        <td class="" width="">
                            <div class=" divPlateCodeSelect">@pData["InvItemId"]</div>  
                        </td>
                        <td class="" width="">
                            <div class=" divPlateNameSelect">@pData["InvItemNameL1"]</div>   
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Search Lookup -->
<script>
    // Search
    $(document).ready(function () {
        $(".txtSearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $(".tblPlateData tbody tr ").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>