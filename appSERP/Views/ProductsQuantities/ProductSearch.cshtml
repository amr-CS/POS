<!-- Search Content -->
<script>
    // Search
    $('.txtSearch').on('keyup', function () {

        // Search Input
        var vSearchInput = $(this).val();

        // Check Input
        if (vSearchInput) {

            // Check All
            $('.divContentSelect').each(function () {

                // Get Content Code
                var vContentCode = $(this).find('.divContentId').text();
                var vContentName = $(this).find('.divContentName').text();

                // Check Result
                if (vContentCode.search(vSearchInput) != -1 || vContentName.search(vSearchInput) != -1) {

                    // Show Results
                    $(this).addClass('d-flex');
                    $(this).removeClass('d-none');
                }
                else {
                    // Hide
                    $(this).addClass('d-none');
                    $(this).removeClass('d-flex');
                }

            })

        }
        else {
            // Show All
            $(this).removeClass('d-none');
            $(this).addClass('d-flex');
        }
    })
</script>