<!-- FinancialYear -->
@model System.Data.DataTable
@using System.Data
@using appSERP.Views.Shared.appResource
@using appSERP.appCode.dbCode.ACC
@using appSERP.appCode.Setting.User
@{ DataTable vDtData = @Model;}

<!-- Header -->
<div >
    @Html.Action("ViewSettingHeader", "ViewSetting", new { pHeaderTitle = appResource._FinancialYear })
</div>
<!-- Utlity -->
<div class="divUtilityBar d-flex ">
    @Html.Partial("~/Views/ViewSetting/ViewSettingUtilityBar.cshtml")
</div>

<!-- Data Container -->
<div  id="divContainer">
    <!-- DataTable -->
    <table class="table table-hover tblData" id="tblData">
        <!-- DataTable Header -->
        <thead>
            <tr>
        <th>@appResource._FinancialYear</th>
        <th>@appResource.FinancialYearStart</th>
        <th>@appResource.FinancialYearEnd</th>
        <th>@appResource.FinancialYearStatusId</th>
        <th>@appResource.FinancialYearStatusId</th>
        <th>@appResource._IsActive</th>
        <th class="thActions">@appResource._Actions</th>
              
                <th class="thActions"></th>
            </tr>
        </thead> <!-- End of DataTable Header -->
        <!-- DataTable Body -->
        <tbody>
            @foreach (DataRow vDrwData in vDtData.Rows)
            {
                <tr data-active="@vDrwData["FinancialYearIsActive"]" data-id="@vDrwData["FinancialYearId"]">
                    <!-- Data -->
                    <td title="@vDrwData["FinancialYear"]">@vDrwData["FinancialYear"]</td>
                    <td title="@vDrwData["FinancialYearStart"]">@vDrwData["FinancialYearStart"]</td>
                    <td title="@vDrwData["FinancialYearEnd"]">@vDrwData["FinancialYearEnd"]</td>
                 
                     <td title="@vDrwData["FinancialYearStatusNameL1"]">@vDrwData["FinancialYearStatusNameL1"]</td>
                    <td title="@vDrwData["FinancialYearStatusNameL2"]">@vDrwData["FinancialYearStatusNameL2"]</td>

                    <td class="dataIsActive"></td>
                    <!-- Actions -->
                    <td>
                        <!-- Edit -->
                        <button type="button" class="btn btnEdit" data-id="@vDrwData["FinancialYearId"]">
                            <i class="icoEdit"></i>
                        </button>
                        <!-- Delete -->
                        <button type="button" class="btn btnDelete" data-id="@vDrwData["FinancialYearId"]" data-name="@vDrwData["FinancialYear"]">
                            <i class="icoDelete"></i>
                        </button>
                    </td> <!-- End of Actions Cell -->
                </tr>
            }
        </tbody><!-- End of DataTable Body -->
    </table> <!-- End of DataTable -->
</div> <!-- End of Data Container -->
<!-- Data Modal -->
<div id="dataModal" class="fade modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="dataModalContent"></div>
    </div>
</div>
<!-- Confirm Delete Modal -->
<div id="confirmDeleteModal" class="fade modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="confirmDeleteModalContent"></div>
    </div>
</div>
<!-- Script Create / Edit / Delete -->
<script>
    // Data Model URL
    var vDataURL = '/FinancialYear/DataModel/';
    // Data Model Elements [Create / Edit]
    var vDataModelElements = $('.btnCreate, .btnEdit');
    // Click Event
    vDataModelElements.on('click', function () {
        // Id
        var vDataId = $(this).attr('data-id');
        // Modal
        $('#dataModalContent').load(vDataURL + vDataId);
        // Check Modal Input
        funCheckModalInput();
        // Modal Show
        $('#dataModal').modal('show');
    });</script>
<script>
    $('.btnDelete').on('click', function () {
        // Id - NameAr - NameEn
        var vDataId = $(this).attr('data-id');
        var vDataName = $(this).attr('data-name');
        // URL
        var vDataURL = '/ViewSetting/ViewSettingConfirmDelete/';
        // Get HTML Content of [Confirm Delete] Partial View
        $.get(
            // URL
            vDataURL,
            // Parameters
            {
                id: vDataId,
                pName: vDataName,
            },
            // Function
            function (data, status) {
                // Modal
                $('#confirmDeleteModalContent').html(data);
                $('#confirmDeleteModal').modal('show');
                // Click Event [Delete Confirm]
                $("body").on("click", "#btnDeleteConfirm", function () {
                    // Delete Action URL
                    var vDeleteActionURL = '/FinancialYear/DataModel/';
                    // Delete
                    $.post(vDeleteActionURL, { id: vDataId, pIsDelete: true }, function () {
                        window.location.href = '/FinancialYear';
                    });
                });
            });
    }); // End of Click Event [Delete Button]</script>
<!-- Notification -->
<script src="~/Scripts/Notification/jquery.toast.js"></script>
<script src="~/Scripts/Notification/jsNotifications.js" type="text/javascript"></script>
<script>
    funNotification('@ViewBag.dbFinancialYear.vSQLResult', '@ViewBag.dbFinancialYear.vSQLResultTypeId');
    @{ ViewBag.dbFinancialYear.vSQLResult = string.Empty;}
    $('.btnPrint').on('click', function () {
        var url = '/FinancialYear/FinancialYearReport'
        var popupWindow = window.open(url);
    });
</script>