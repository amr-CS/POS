@using appSERP.Views.Shared.appResource
@using appSERP.appCode.Setting.User
@{
    ViewBag.Title = "SearchStoreTypeType";
    Layout = "~/Views/Shared/appLayout/_ModalLayout.cshtml";
}

<style>
    .divStoreType {
        max-height: 80vh;
        overflow: scroll;
    }

    .divStoreTypeSelect {
        cursor: pointer;
        transition: all 0.5s;
    }

        .divStoreTypeSelect:hover {
            font-weight: bold;
            background-color: #2980b9;
            color: #FFF;
        }

    .divStoreTypeNo {
        width: 60px;
    }
</style>


<!-- Header -->
<div class="">
    <div class="w-100 bg-white border font-weight-bold p-4">@appResource.StoreType</div>
</div>

<!-- Search -->
<div class="">
    <div class="w-100 bg-white border p-4">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fa fa-search"></i></span>
            </div>
            <input type="text" class="form-control txtSearch" placeholder="@appResource.btnSearch">
        </div>
    </div>
</div>
<div class="divStoreType">
    <table class="table table-bordered tblData border">
        <thead>
        </thead>
        <tbody class="tblBodyStoreType"></tbody>
    </table>
</div>


<!-- StoreType GET -->
<script>

    // On Load
    $(document).ready(function () {

        // Focus on Search
        $('.txtSearch').focus();

        // StoreType GET
        funStoreTypeGET();
    })

    // StoreType GET
    function funStoreTypeGET() {

        $.get('/api/APIStoreType/StoreTypeGET',
            {


            }, function (data, status) {

                // JSON
                var vDataResult = JSON.parse(data);
                // Table Body
                var vTableBody = $('.tblBodyStoreType');


                // StoreTypes
                $.each(vDataResult, function (i, StoreTypeData) {

                    var vRowContent = '<tr data-id="' + vDataResult[i].StoreTypeId + '">';

                        var vStoreTypeName = vDataResult[i].StoreTypeNameL1;
                        if ('@clsUser.vUserLanguageId' == '2') {
                            vStoreTypeName = vDataResult[i].StoreTypeNameL2;
                             }

                        vRowContent += '<td data-id="' + vDataResult[i].StoreTypeId + '">';
                            vRowContent += '<div class="divStoreTypeSelect d-flex p-2" data-id="' + vDataResult[i].StoreTypeId + '">';
                                vRowContent += '<div class="divStoreTypeNo px-4">' + vDataResult[i].StoreTypeCode + '</div>';
                               vRowContent += '<div class="divStoreTypeName px-4">' + vDataResult[i].StoreTypeNameL1 + '</div>';
                              vRowContent += '<div class="divStoreTypeNameL2 px-4">' + vDataResult[i].StoreTypeNameL2 + '</div>';
                    vRowContent += '<div visibil class="divStoreTypeIsActive d-none px-4" ><input type="checkbox" class="chkStoreTypeIsActive"  id=chkStoreTypeIsActive'+i+'"  checked="' + vDataResult[i].StoreTypeIsActive + '" /></div>';
                                //vRowContent += '<div class="divStoreTypeCurrencyFactor d-none px-4">' + vDataResult[i].CurrencyExchange + '</div>';
                            vRowContent += '</div>';
                        vRowContent += '</td>';

                    vRowContent += '</tr>';

                    // Append Row Content
                    vTableBody.append(vRowContent);
                })

            })
    }

</script>

<!-- Search StoreType -->
<script>
    // Search
    $('.txtSearch').on('keyup', function () {

        // Search Input
        var vSearchInput = $(this).val();

        if (vSearchInput) {

            // Check All
            $('.divStoreTypeSelect').each(function () {

                // Get StoreType Code
                var vStoreTypeCode = $(this).find('.divStoreTypeNo').text();
                var vStoreTypeName = $(this).find('.divStoreTypeName').text();

                if (vStoreTypeCode.search(vSearchInput) != -1 || vStoreTypeName.search(vSearchInput) != -1) {

                    $(this).addClass('table-success');
                    $(this).hide();

                    console.log('found')
                }
                else {
                    $(this).removeClass('table-success');
                    $(this).show();
                }

            })

        }
        else {
            $('.divStoreTypeSelect').removeClass('table-success');
            $(this).show();
        }
    })
</script>

