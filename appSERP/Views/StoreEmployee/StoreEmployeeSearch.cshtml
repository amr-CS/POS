</style>
<div class="divContainer bg-light">
    <div class="card">
        <div class="card-header ">
            خيارات البحث
        </div>
        <div class="card-body">
            <div class="divFormControl">
                <div class="row">
                    <div class="col-sm-2">
                        <div>الكود<input type="text" class="form-control txtNo" name="chkIsValid" min="0" /></div>
                    </div>
                    <div class="col-sm-2">
                        <div>الاسم<input type="text" class="form-control txtName" /></div>
                    </div>
                    <div class="col-sm-2">
                        <div>الوظيفة<input type="text" class="form-control txtJob" /></div>
                    </div>


                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-md-6">
                                @appResource.EmployeeStartDate
                                <input type="text" class="form-control txtDateFrom" />
                            </div>
                            <div class="col-md-6">
                                @appResource.EmployeeEndDate
                                <input type="text" class="form-control txtDateTo" />
                            </div>
                        </div>
                    </div>

                    <div class=" col-sm-4">
                        <div class="row">
                            <div class="col-md-6">
                              
                            </div>
                            <div class="col-md-6">
                              
                            </div>
                        </div>
                    </div>

                    <div class=" col-sm-2">
             
                    </div>
                </div>
                </div>
        </div>
        <div class="card-footer text-muted">
            <button type="button" class="btn btn-secondary btnSearchh">@appResource.btnSearch</button>

        </div>
    </div>

    <div class="divFormDtl ">
        <table class="table table-bordered table-hover tblStoreEmployeeSearch">
            <thead>
                <tr>
                    <th class="btnCheckAll" data-checked="false">تحديد الكل</th>
                    <th>@appResource._Code</th>
                    <th> @appResource.StoreEmployeeId</th>
                    <th> @appResource.GeneralNumber</th>
                    <th> @appResource.Job</th>
                    <th> @appResource.Profit</th>
                    <th> @appResource.EmployeeStartDate</th>
                    <th> @appResource.EmployeeEndDate</th>
                    <th> @appResource._Note</th>
                </tr>
            </thead>

            <tbody class="tblStoreEmployeeSearchBody"></tbody>
        </table>

    </div>
    <div class="card">
        <div class="card-body">
            <button type="button" class="btn btn-secondary btnSelect">اختيار</button>
        </div>
    </div>
</div>
<script>



    //function Append
    function funStoreEmployeeRowSearchConfig(pStoreEmployeeRow) {
        // Content
        var RowContent = '<tr data-id="' + pStoreEmployeeRow.StoreEmployeeId + '">' +
            '<td align="center"><input type="checkbox" class="clsChk" name="chkIsValid" data-id="' + pStoreEmployeeRow.StoreEmployeeId + '"/></td> ' +
            '<td align="center">' + pStoreEmployeeRow.StoreEmployeeCode + '</td>' +
            '<td align="center">' + pStoreEmployeeRow.StoreEmployeeName + '</td>' +
            '<td align="center">' + pStoreEmployeeRow.GeneralNumber + '</td>' +
            '<td align="center">' + pStoreEmployeeRow.Job + '</td>' +
            '<td align="center">' + pStoreEmployeeRow.Profit + '</td>' +
            '<td align="center">' + pStoreEmployeeRow.EmployeeStartDate + '</td>' +
            '<td align="center">' + pStoreEmployeeRow.EmployeeEndDate + '</td>' +
            '<td align="center">' + pStoreEmployeeRow._Note + '</td>' +
            +'</tr > '
   



        return RowContent
    }
    function funGetStoreEmployeeData(pStoreEmployeeCode, pStoreEmployeeName, pJob, pEmployeeStartDate, EmployeeEndDate) {
        var vDataResult;
        $.get('/api/APIStoreEmployee/StoreEmployeeGET',
            {
                pStoreEmployeeCode: pStoreEmployeeCode,
                pStoreEmployeeName: pStoreEmployeeName,
                pJob: pJob,
                pSearchStartDate: pEmployeeStartDate,
                pSearchEndDate: EmployeeEndDate,
                pIsDeleted: false,
                // Query Type Id
                pQueryTypeId: '401',
            },
            function (data, status) {
                $('.tblStoreEmployeeSearchBody').html('');
                if (data != undefined && data != '') {
                    // JSON Parse
                    vDataResult = JSON.parse(data);
                 
                    $.each(vDataResult, function (m, StoreEmployeeData) {
                        // GET Cash Desk Row Content

                        var vAccountRowContent = funStoreEmployeeRowSearchConfig(vDataResult[m]);

                        // Append Row Content
                        $('.tblStoreEmployeeSearchBody').append(vAccountRowContent);
                    });
                }
                else {

                }
              

            })

        return vDataResult
    }
    // Action Search
    $('.btnSearchh').on('click', function () {
        

        var vDocSearchNo = $('.txtNo').val();
        var vName = $('.txtName').val();
        var vJob = $('.txtJob').val();
        var vDateFrom = $('.txtDateFrom').val();
        var vDateTo = $('.txtDateTo').val();


        // Get Row
        funGetStoreEmployeeData(vDocSearchNo, vName, vJob, vDateFrom, vDateTo )
    })
    // Actione Load
    $(document).ready(function () {
        // Get Row
        //funGetStoreEmployeeData(vDocSearchNo, vName, vJob, vDateFrom, vDateTo )
    });

</script>
<script>

    // CheckBox Selector
    $(".btnCheckAll").click(function () {
        var vChecked = $(this).attr('data-checked');

        if (vChecked == 'true') {
            $(this).attr('data-checked', 'false');
            $("input[name='chkIsValid']").prop("checked", false);
        }
        else {
            $(this).attr('data-checked', 'true');
            vChecked = $(this).attr('data-checked');
            $("input[name='chkIsValid']").prop("checked", true);
        }
    });


</script>