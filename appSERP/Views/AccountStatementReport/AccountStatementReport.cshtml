@using appSERP.Views.Shared.appResource;
@using appSERP.appCode.Setting.TimeSetting;
@using appSERP.appCode.Setting.User;

@using System.Data
@{
    ViewBag.Title = "AccountStatementReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Master -->
@{ DataTable vDtReportData = ViewBag.vbData; }
<!-- Detail -->
@*@{ DataTable vDtReportDataDetail = ViewBag.vbDataDetail; }*@

<!-- Header -->
<div class="divRptViewTitle">
    @Html.Action("Index", "ViewHeader", new { pHeaderTitle = appResource.lblAccountDirectory, pIsNew = false })
</div>

@Html.Action("ReportTemplate", "ReportSetting")
<div class="container-fluid table-responsive rptData">
    <table class="table table-bordered table-hover tblData">
        <thead>
            <tr>
                <th>@appResource.Balance</th>
                <th>@appResource._CreditBase</th>
                <th>@appResource._DebitBase</th>
                <th>@appResource._Note</th>
                <th>@appResource._Date</th>
                <th>@appResource._Seq</th>
                <th>@appResource.AccountTypeId</th>
            </tr>
        </thead>
        <tbody>
            @if (vDtReportData != null)
            {
                foreach (DataRow vDrwData in vDtReportData.Rows)
                {
                    <tr>
                        <td width="10%" align="center">@vDrwData["Balance"]</td>
                        <td width="10%" align="center">@vDrwData["TransactionCreditBase"]</td>
                        <td width="10%" align="center">@vDrwData["TransactionDebitBase"]</td>
                        <td width="10%" align="center">@vDrwData["TransactionNote"]</td>
                        <td width="10%" align="center">@vDrwData["TransactionDate"]</td>

                        <td width="10%" align="center">@vDrwData["TransactionSeq"]</td>
                        @if (clsUser.vUserLanguageId == 1)
                        {
                            <td width="10%" align="center">@vDrwData["TransactionTypeNameL1"]</td>
                        }
                        else
                        {
                            <td width="10%" align="center">@vDrwData["TransactionTypeNameL2"]</td>
                        }




                    </tr>

                }
            }

        </tbody>
    </table>
</div>

