<style>
    .divUnit {
        max-height: 80vh;
        overflow: scroll;
    }

    .divUnitSelect {
        cursor: pointer;
        transition: all 0.5s;
    }

        .divUnitSelect:hover {
            font-weight: bold;
            background-color: #2980b9;
            color: #FFF;
        }

    .divUnitNo {
        width: 60px;
    }
</style>


<!-- Header -->
<div class="">
    <div class="w-100 bg-white border font-weight-bold p-4">الوحدات</div>
</div>

<!-- Search -->
<div class="">
    <div class="w-100 bg-white border p-4">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fa fa-search"></i></span>
            </div>
            <input type="text" class="form-control txtSearch" placeholder="@appResource.btnSearch">
        </div>
    </div>
</div>
<div class="divUnit">
    <table class="table table-bordered tblData border">
        <thead>
        </thead>
        <tbody class="tblBodyUnit"></tbody>
    </table>
</div>


<!-- BasicUnit GET -->
<script>

    // On Load
    $(document).ready(function () {

        // Focus on Search
        $('.txtSearch').focus();

        // BasicUnit GET
        funBasicUnitGET();
    })

    // BasicUnit GET
    function funBasicUnitGET() {

        $.get('/api/APIVUnit/VUnitGET',
            {

                pQueryTypeId:400
            }, function (data, status) {

                // JSON
                var vDataResult = JSON.parse(data);
                // Table Body
                var vTableBody = $('.tblBodyUnit');


                // BasicUnits
                $.each(vDataResult, function (i, BasicUnitData) {

                    var vRowContent = '<tr data-id="' + vDataResult[i].BasicUnitId + '">';

                    var vBasicUnitName = vDataResult[i].LookupDtlDesc;
                        if ('@clsUser.vUserLanguageId' == '2') {
                            vBasicUnitName = vDataResult[i].LookupDtlDescL;
                             }

                    vRowContent += '<td data-id="' + vDataResult[i].BasicUnitId + '">';
                    vRowContent += '<div class="divUnitSelect d-flex p-2" data-id="' + vDataResult[i].LookupDtlId + '" data-parent-id = "0" data-parent-code = "0" data-parent-name = "0">';
                    vRowContent += '<div class="divUnitNo px-4">' + vDataResult[i].CodeId + '</div>';
                    vRowContent += '<div class="divUnitName px-4">' + vDataResult[i].LookupDtlDesc + '</div>';
                    vRowContent += '<div class="divUnitameL2 px-4">' + vDataResult[i].LookupDtlDescL + '</div>';

                    //vRowContent += '<div visibil class="divUnitIsActive d-none px-4" ><input type="checkbox" class="chkUnitIsActive"  id=chkBasicUnitIsActive' + i + '"  checked="' + vDataResult[i].BasicUnitIsActive + '" /></div>';
                             
                            vRowContent += '</div>';
                        vRowContent += '</td>';

                    vRowContent += '</tr>';

                    // Append Row Content
                    vTableBody.append(vRowContent);
                })

            })
    }

</script>

