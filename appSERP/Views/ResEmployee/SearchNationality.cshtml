@using appSERP.appCode.SQL.QueryType
@using appSERP.Views.Shared.appResource
@using appSERP.appCode.Setting.User
@{
    ViewBag.Title = "NationalitySearch";
    Layout = "~/Views/Shared/appLayout/_ModalLayout.cshtml";
}

<style>
    .divNationality {
        max-height: 80vh;
        overflow: scroll;
    }

    .divNationalitySelect {
        cursor: pointer;
        transition: all 0.5s;
    }

        .divNationalitySelect:hover {
            font-weight: bold;
            background-color: #2980b9;
            color: #FFF;
        }

    .divNationalityNo {
        width: 60px;
    }
</style>

<!-- Header -->
<div class="">
    <div class="w-100 bg-white border font-weight-bold p-4">@appResource.lblNationality</div>
</div>

<!-- Search -->
<div class="">
    <div class="w-100 bg-white border p-4">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fa fa-search"></i></span>
            </div>
            <input type="text" class="form-control txtSearch" placeholder="@appResource.btnSearch">
        </div>
    </div>
</div>
<div class="divNationality">
    <table class="table table-bordered tblData border">
        <thead>
        </thead>
        <tbody class="tblBodyNationality"></tbody>
    </table>
</div>


<!-- Nationality GET -->
<script>

    // On Load
    $(document).ready(function () {

        // Focus on Search
        $('.txtSearch').focus();

        // Nationality GET
        funNationalityGET();
    })

    // Nationality GET
    function funNationalityGET() {

        $.get('/api/APINationality/NationalityGET',
            {


            }, function (data, status) {

                // JSON
                var vDataResult = JSON.parse(data);
                // Table Body
                var vTableBody = $('.tblBodyNationality');


                // Nationalitys
                $.each(vDataResult, function (i, NationalityData) {

                    var vRowContent = '<tr data-id="' + vDataResult[i].LookupDtlId + '">';

                    var vNationalityName = vDataResult[i].LookupDtlDesc;
                        if ('@clsUser.vUserLanguageId' == '2') {
                            vNationalityName = vDataResult[i].LookupDtlDesc;
                        }

                    vRowContent += '<td data-id="' + vDataResult[i].LookupDtlId + '">';
                    vRowContent += '<div class="divNationalitySelect d-flex p-2" data-id="' + vDataResult[i].LookupDtlId + '">';
                    vRowContent += '<div class="divNationalityNo px-4">' + vDataResult[i].CodeId  + '</div>';
                                vRowContent += '<div class="divNationalityName px-4">' + vNationalityName + '</div>';
                            vRowContent += '</div>';
                        vRowContent += '</td>';

                    vRowContent += '</tr>';

                    // Append Row Content
                    vTableBody.append(vRowContent);
                })

            })
    }

</script>

<!-- Search Nationality -->
<script>
    // Search
    $('.txtSearch').on('keyup', function () {

        // Search Input
        var vSearchInput = $(this).val();

        if (vSearchInput) {

            // Check All
            $('.divNationalitySelect').each(function () {

                // Get Nationality Code
                var vNationalityCode = $(this).find('.divNationalityNo').text();
                var vNationalityName = $(this).find('.divNationalityName').text();

                if (vNationalityCode.search(vSearchInput) != -1 || vNationalityName.search(vSearchInput) != -1) {

                    //$(this).addClass('table-success');
                    //$(this).hide();
                    $(this).addClass('d-flex');
                    $(this).removeClass('d-none');

                    console.log('found')
                }
                else {
                    //$(this).removeClass('table-success');
                    //$(this).show();
                    $(this).addClass('d-none');
                    $(this).removeClass('d-flex');
                }

            })

        }
        else {
            //$('.divNationalitySelect').removeClass('table-success');
            //$(this).show();
            $('.divNationalitySelect').each(function () {
                    $(this).addClass('d-flex');
                    $(this).removeClass('d-none');
            })
        }
    })
</script>