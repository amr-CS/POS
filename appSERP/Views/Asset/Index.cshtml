<!-- Asset -->
@model System.Data.DataTable
@using System.Data
@using appSERP.Views.Shared.appResource
@using appSERP.appCode.dbCode.FA
@using appSERP.appCode.Setting.User
@{ DataTable vDtData = @Model;}

<!-- Header -->
<div class="">
    @Html.Action("ViewSettingHeader", "ViewSetting", new { pHeaderTitle = @appResource.lblAsset })
</div>
<!-- Utlity -->
<div class="divUtilityBar d-flex ">
    @Html.Partial("~/Views/ViewSetting/ViewSettingUtilityBar.cshtml")
</div>
<div class="p-2 flex-shrink-1 bd-highlight">
    @Html.ActionLink(@appResource.lblExcelAsset, "AssetExcel", "Asset", htmlAttributes: new { @class = "btn btn-success" })
</div>
<!-- Data Container -->
<div class="" id="divContainer">
    <!-- DataTable -->
    <table class="table table-hover tblData" id="tblData">
        <!-- DataTable Header -->
        <thead>
            <tr>
                <th> @appResource.AssetId</th>
                <th> @appResource.AssetId</th>
                <th> @appResource._Code</th>
                <th> @appResource.FixedAssetSiteQty</th>
                <th> @appResource._Currency</th>
                <th> @appResource._Currency</th>
                <th> @appResource._Value</th>
                <th> @appResource._IsPosted</th>
                <th> @appResource._Debit</th>
                <th> @appResource._Credit</th>
                <th>@appResource._IsActive</th>
                <th class="thActions">@appResource._Actions</th>
            </tr>
        </thead> <!-- End of DataTable Header -->
        <!-- DataTable Body -->
        <tbody>
            @foreach (DataRow vDrwData in vDtData.Rows)
            {
                <tr data-active="@vDrwData["AssetIsActive"]" data-id="@vDrwData["AssetId"]">
                    <!-- Data -->
                     <td title="@vDrwData["AssetNameL1"]">@vDrwData["AssetNameL1"]</td>
                     <td title="@vDrwData["AssetNameL2"]">@vDrwData["AssetNameL2"]</td>
            
                    <td title="@vDrwData["AssetCode"]">@vDrwData["AssetCode"]</td>
                    <td title="@vDrwData["AssetQty"]">@vDrwData["AssetQty"]</td>
                    <td title="@vDrwData["CurrencyNameL1"]">@vDrwData["CurrencyNameL1"]</td>
                    <td title="@vDrwData["CurrencyValue"]">@vDrwData["CurrencyValue"]</td>
                    <td title="@vDrwData["IsPosted"]">@vDrwData["IsPosted"]</td>
                    <td title="@vDrwData["AssetDebitAccount"]">@vDrwData["AssetDebitAccount"]</td>
                    <td title="@vDrwData["AssetCreditAccount"]">@vDrwData["AssetCreditAccount"]</td>

                    <td class="dataIsActive"></td>
                    <!-- Actions -->
                    <td>
                        <!-- Edit -->
                        <button type="button" class="btn btnEdit" data-id="@vDrwData["AssetId"]">
                            <i class="icoEdit"></i>
                        </button>
                        <!-- Delete -->
                        <button type="button" class="btn btnDelete" data-id="@vDrwData["AssetId"]" data-name="@vDrwData["AssetNameL1"]">
                            <i class="icoDelete"></i>
                        </button>
                    </td> <!-- End of Actions Cell -->
                </tr>
            }
        </tbody><!-- End of DataTable Body -->
    </table> <!-- End of DataTable -->
</div> <!-- End of Data Container -->
<!-- Data Modal -->
<div id="dataModal" class="fade modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="dataModalContent"></div>
    </div>
</div>
<!-- Confirm Delete Modal -->
<div id="confirmDeleteModal" class="fade modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="confirmDeleteModalContent"></div>
    </div>
</div>
<!-- Script Create / Edit / Delete -->
<script>
    // Data Model URL
    var vDataURL = '/Asset/DataModel/';
    // Data Model Elements [Create / Edit]
    var vDataModelElements = $('.btnCreate, .btnEdit');
    // Click Event
    vDataModelElements.on('click', function () {
        // Id
        var vDataId = $(this).attr('data-id');
        // Modal
        $('#dataModalContent').load(vDataURL + vDataId);
        // Modal Full
        $('#dataModalContent').parent().addClass('modal-dialog-full');
        // Check Modal Input
        funCheckModalInput();
        // Modal Show
        $('#dataModal').modal('show');
    });</script>
<script>
    $('.btnDelete').on('click', function () {
        // Id - NameAr - NameEn
        var vDataId = $(this).attr('data-id');
        var vDataName = $(this).attr('data-name');
        // URL
        var vDataURL = '/ViewSetting/ViewSettingConfirmDelete/';
        // Get HTML Content of [Confirm Delete] Partial View
        $.get(
            // URL
            vDataURL,
            // Parameters
            {
                id: vDataId,
                pName: vDataName,
            },
            // Function
            function (data, status) {
                // Modal
                $('#confirmDeleteModalContent').html(data);
                $('#confirmDeleteModal').modal('show');
                // Click Event [Delete Confirm]
                $("body").on("click", "#btnDeleteConfirm", function () {
                    // Delete Action URL
                    var vDeleteActionURL = '/Asset/DataModel/';
                    // Delete
                    $.post(vDeleteActionURL, { id: vDataId, pIsDelete: true }, function () {
                        window.location.href = '/Asset';
                    });
                });
            });
    }); // End of Click Event [Delete Button]</script>
<!-- Notification -->
<script src="~/Scripts/Notification/jquery.toast.js"></script>
<script src="~/Scripts/Notification/jsNotifications.js" type="text/javascript"></script>
<script>
    funNotification('@dbAsset.vSQLResult', '@dbAsset.vSQLResultTypeId');
    @{ dbAsset.vSQLResult = string.Empty;}
</script>



