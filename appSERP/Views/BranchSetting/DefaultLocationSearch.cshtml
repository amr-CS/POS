<div class="divDefaultLocation">

    <table class="table table-bordered tblData border">
        <thead>

        </thead>
        <tbody class="tblBodyLookup"></tbody>
    </table>

</div>


<!-- Lookup GET -->
<script>
    // On Load
    $(document).ready(function () {

        // Focus on Search
        $('.txtSearch').focus();

        // Lookup GET
        funLookupGET();
    })

    // Lookup GET
    function funLookupGET() {

        $.get('/api/APISite/SiteGET',
            {
