@using appSERP.Views.Shared.appResource
@{
    Layout = "~/Views/Shared/appLayout/_ModalLayout.cshtml";
}
<style>
    body {
        background-color: #FFF;
    }

    .divFormControl, divFormDtl {
        background-color: #FFF;
        padding: 3px;
    }

    .tblUserBody {
        text-align: center;
        background-color: #FFF;
    }

    .divFormDtl {
        max-height: 40vh !important;
        overflow-y: scroll !important;
        background-color: #FFF;
    }
</style>
<div class="divContainer bg-light">
    <div class="card">
        <div class="card-header ">
            خيارات البحث
        </div>
        <div class="card-body">
            <div class="divFormControl">
                <div class="row">
                    <div class="col-sm-1">
                        <div>رقم <input type="text" class="form-control txtUserCode text-center" name="chkIsValid" min="0" /></div>
                    </div>
                    <div class="col-sm-4">
                        <div>  اسم المستخدم <input type="text" class="form-control txtUserNameSearch text-center"  id="" /></div>
                    </div>
              


                    <div class=" col-sm-1">
                        البحث
                        <div>
                            <button type="button" class="btn btn-secondary  btnSearch">@appResource.btnSearch</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

    <div class="divFormDtl ">
        <table class="table table-bordered table-hover tblUser">
            <thead>
                <tr>
                    <th class=" " data-checked="false">
                        <input type="checkbox" class="btnCheckAll">
                        تحديد الكل
                    </th>
                    <th>رقم </th>
                    <th>اسم المستخدم </th>
                    <th>الموظف</th>
                </tr>
            </thead>

            <tbody class="tblUserBody"></tbody>
        </table>

    </div>
    <div class="card">
        <div class="card-body">
            <button type="button" class="btn btn-secondary btnSelectUser">اختيار</button>
        </div>
    </div>
</div>

<script>
    //function Append
    function funUserRowConfig(pUserRow) {
        // Content
        var RowContent = '<tr>' +
            '<td><input type="checkbox" class="clsChk" name="chkIsValid" data-id="' + pUserRow.UserId + '"/></td> ' +
            '<td>' + pUserRow.UserCode + '</td>' +
            '<td>' + pUserRow.UserName + '</td>' +
            '<td>' + pUserRow.EmployeeName + '</td>' +
            +'</tr > '
        return RowContent
    }
    function funGetUserData(pUserCode, pUserName) {
        var vDataResult;
        $.get('/api/APIUser/UserGet',
            {
                // search Parameters
                pUserCode: pUserCode,
                pUserName: pUserName,
                phIsDeleted: false,
                // Query Type Id
                pQueryTypeId: '400',
                //pItemTypeId: pItemTypeId,
            },
            function (data, status) {

                // JSON Parse
                vDataResult = JSON.parse(data);
                $('.tblUserBody').html('');
                $.each(vDataResult, function (m, UserData) {
                    // GET Cash Desk Row Content

                    var vAccountRowContent = funUserRowConfig(vDataResult[m]);

                    // Append Row Content
                    $('.tblUserBody').append(vAccountRowContent);
                });

            })

        return vDataResult
    }
    // Action Search
    $('.btnSearch').on('click', function () {
        var vCode = $('.txtUserCode').val();
        var Name = $('.txtUserNameSearch').val();
        // Get Row
        funGetUserData(vCode, Name)
    })
    // Actione Load
    $(document).ready(function () {
        var vItemTypeId = $('.txtItemType').val();
        // Get Row
        funGetUserData(null, null)
    });

</script>
<script>

    // CheckBox Selector
    $(".btnCheckAll").click(function () {
        var vChecked = $(this).attr('data-checked');

        if (vChecked == 'true') {
            $(this).attr('data-checked', 'false');
            $("input[name='chkIsValid']").prop("checked", false);
        }
        else {
            $(this).attr('data-checked', 'true');
            vChecked = $(this).attr('data-checked');
            $("input[name='chkIsValid']").prop("checked", true);
        }
    });

</script>
