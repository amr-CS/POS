@using appSERP.appCode.SQL.QueryType
@using appSERP.Views.Shared.appResource
@using appSERP.appCode.Setting.User
@{
    ViewBag.Title = "SearchItem";
    Layout = "~/Views/Shared/appLayout/_ModalLayout.cshtml";
}


<style>
    .divItem {
        max-height: 80vh;
        overflow: scroll;
    }

    .divItemSelect {
        cursor: pointer;
        transition: all 0.5s;
    }

        .divItemSelect:hover {
            font-weight: bold;
            background-color: #2980b9;
            color: #FFF;
        }

    .divItemNo {
        width: 60px;
    }
</style>


<!-- Header -->
<div class="">
    <div class="w-100 bg-white border font-weight-bold p-4">Item</div>
</div>

<!-- Search -->
<div class="">
    <div class="w-100 bg-white border p-4">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fa fa-search"></i></span>
            </div>
            <input type="text" class="form-control txtSearch" placeholder="@appResource.btnSearch">
        </div>
    </div>
</div>
<div class="divItem">
    <table class="table table-bordered tblData border">
        <thead>
        </thead>
        <tbody class="tblBodyItem"></tbody>
    </table>
</div>


<!-- Item GET -->
<script>

    // On Load
    $(document).ready(function () {

        // Focus on Search
        $('.txtSearch').focus();

        // Item GET
        funItemGET();
    })

    // Item GET
    function funItemGET() {

        var vItemId = '@ViewBag.pItemId'
        console.log('vItemId' + vItemId);
        $.get('/api/APIInvItem/InvItemGET',
            {
                pInvItemId: vItemId,
                pQueryTypeId:401
            }, function (data, status) {

                // JSON
                var vDataResult = JSON.parse(data);
                // Table Body
                var vTableBody = $('.tblBodyItem');


                // Items
                $.each(vDataResult, function (i, ItemData) {

                    var vRowContent = '<tr data-id="' + vDataResult[i].InvItemId + '">';

                    var vItemName = vDataResult[i].InvItemNameL1;
                        if ('@clsUser.vUserLanguageId' == '2') {
                            vItemName = vDataResult[i].InvItemNameL2;
                             }


                    vRowContent += '<td data-id="' + vDataResult[i].InvItemId + '">';
                    vRowContent += '<div class="divItemSelect d-flex p-2" data-id="' + vDataResult[i].InvItemId + '">';
                    vRowContent += '<div class="divItemNo px-4">' + vDataResult[i].InvItemCode + '</div>';
                    vRowContent += '<div class="divItemName px-4">' + vDataResult[i].InvItemNameL1 + '</div>';
                    vRowContent += '<div class="divItemNameL2 px-4">' + vDataResult[i].InvItemNameL2 + '</div>';



                    vRowContent += '<div visibil class="divItemIsActive d-none px-4" ><input type="checkbox" class="chkItemIsActive"  id=chkItemIsActive' + i + '"  checked="' + vDataResult[i].InvItemIsActive + '" /></div>';
                                //vRowContent += '<div class="divItemItemFactor d-none px-4">' + vDataResult[i].ItemExchange + '</div>';
                            vRowContent += '</div>';
                        vRowContent += '</td>';

                    vRowContent += '</tr>';

                    // Append Row Content
                    vTableBody.append(vRowContent);
                })

            })
    }

</script>

<!-- Search Item -->
<script>
    // Search
    $('.txtSearch').on('keyup', function () {

        // Search Input
        var vSearchInput = $(this).val();

        if (vSearchInput) {

            // Check All
            $('.divItemSelect').each(function () {

                // Get Item Code
                var vItemCode = $(this).find('.divItemNo').text();
                var vItemName = $(this).find('.divItemName').text();

                if (vItemCode.search(vSearchInput) != -1 || vItemName.search(vSearchInput) != -1) {

                    $(this).addClass('table-success');
                    $(this).hide();

                    console.log('found')
                }
                else {
                    $(this).removeClass('table-success');
                    $(this).show();
                }

            })

        }
        else {
            $('.divItemSelect').removeClass('table-success');
            $(this).show();
        }
    })
</script>

