@model appSERP.Models.GD.CompanySystemModel
@using appSERP.Views.Shared.appResource

@{
    ViewBag.Title = "DataModel";
    Layout = "~/Views/Shared/appLayout/_ModalLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <!-- Header -->
        <div class="container-fluid">
            @Html.Action("ViewSettingModalHeader", "ViewSetting", new { pModalHeaderTitle = "نظام الشركات", pId = Model.CompanySystemId })
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.CompanySystemId)

        <div class="form-group">
            @Html.LabelFor(model => model.CompanySystemCode, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.CompanySystemCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CompanySystemCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CompanyId, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                <select id="selectCompany" class="selectpicker" name="CompanyId" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true"></select>
                @Html.ValidationMessageFor(model => model.CompanyId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SystemId, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                <select id="selectSystem" class="selectpicker" name="SystemId" data-live-search="true" data-live-search-placeholder="Search" data-actions-box="true"></select>

                @Html.ValidationMessageFor(model => model.SystemId, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="custom-control custom-checkbox col-md-12">
                @Html.EditorFor(model => model.CompanySystemIsActive, new { htmlAttributes = new { @class = "custom-control-input", @id = "customCheck1" } })
                @Html.LabelFor(model => model.CompanySystemIsActive, htmlAttributes: new { @class = "custom-control-label", @for = "customCheck1" })
            </div>
        </div>


    </div>

    <div class="form-group divModalFooter">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="@appResource.btnSave" class="btn btn-success" />
            <button type="button" class="btn btn-light" data-dismiss="modal">@appResource.btnClose</button>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        var vSystemId = 0;
        var vCompanyId = 0;
        // List GetSystem
        $.post('/Home/GetSystem',
            null,
            function (data, status) {
                var vDataJSON = JSON.parse(data);
                $.each(vDataJSON, function (i, System) {
                    $('#selectSystem').append('<option data-id="' + System.SystemId + '" value="' + System.SystemId + '" sort-id="' + i + '">' + System.SystemNameL1 + '</option>')
                    if (i == 0) {
                        vSystemId = System.SystemId;
                    }
                })
              if (parseInt('@ViewBag.vbcSystemId') > 0) {
                vSystemId = parseInt('@ViewBag.vbcSystemId');
            }
            $('#selectSystem').val(vSystemId);
                // Refresh Select Picker
                $('.selectpicker').selectpicker('refresh');
            }
    )



    // List GetCompanyBranch
    $.post('/Home/GetCompanyBranch',
        null,
        function (data, status) {
            var vDataJSON = JSON.parse(data);
            $.each(vDataJSON, function (i, CompanyBranch) {
                $('#selectCompany').append('<option data-id="' + CompanyBranch.CompanyBranchId + '" value="' + CompanyBranch.CompanyBranchId + '" sort-id="' + i + '">' + CompanyBranch.CompanyBranchNameL1 + '</option>')
                if (i == 0) {
                    vCompanyId = CompanyBranch.CompanyBranchId;
                }
            })
               if (parseInt('@ViewBag.vbcCompanyId') > 0) {
                   vCompanyId = parseInt('@ViewBag.vbcCompanyId');
            }
            $('#selectCompany').val(vCompanyId);
            // Refresh Select Picker
            $('.selectpicker').selectpicker('refresh');
        }
        )
    });
</script>