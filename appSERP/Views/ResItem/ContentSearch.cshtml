<!-- Content GET -->
<script>
    // On Load
    $(document).ready(function () {

        // Focus on Search
        $('.txtSearch').focus();

        // Content GET
        funContentGET();
    })

    // Content GET
    function funContentGET() {

        $.get('/api/APIInvItem/InvItemGET',
            {
                //pItemType: 1,
                   pItemTypeList:'1,2',
                pQueryTypeId: '@clsQueryType.qSelectBH',

            }, function (data, status) {

                // JSON
                var vDataResult = JSON.parse(data);
                // Table Body
                var vTableBody = $('.tblBodyContent');

                console.log(vDataResult)
                // Contents
                $.each(vDataResult, function (i, ContentData) {

                    var vRowContent = '<tr data-id="' + vDataResult[i].ContentId + '">';

                    var vContentName = vDataResult[i].ContentNameL1;
                        if ('@clsUser.vUserLanguageId' == '2') {
                            vContentName = vDataResult[i].ContentNameL2;
                    }
                    console.log(vDataResult[i].AccountIsCostCenter)
                    vRowContent += '<td data-id="' + vDataResult[i].ContentId + '">';
                    vRowContent += '<div class="divContentSelect d-flex p-2" data-id="' + vDataResult[i].InvItemId + '">';
                    vRowContent += '<div class="divContentId d-none px-4">' + vDataResult[i].InvItemId + '</div>';
                    vRowContent += '<div class="divContentCode px-4 d-none">' + vDataResult[i].InvItemCode+ '</div>';
                    vRowContent += '<div class="divContentName px-4">' + vDataResult[i].InvItemNameL1 + '</div>';
                    vRowContent += '<div class="divItemType px-4">' + vDataResult[i].TypeName + '</div>';


                            vRowContent += '</div>';
                        vRowContent += '</td>';

                    vRowContent += '</tr>';

                    // Append Row Content
                    vTableBody.append(vRowContent);
                })

            })
    }

</script>

