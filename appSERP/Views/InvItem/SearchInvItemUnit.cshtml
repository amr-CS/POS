<!-- Search Unit -->
<script>
    // Search
    $('.txtSearch').on('keyup', function () {

        // Search Input
        var vSearchInput = $(this).val();

        // Check Input
        if (vSearchInput) {

            // Check All
            $('.divInvItemSelect').each(function () {

                // Get InvItem Code
                var vInvItemCode = $(this).find('.divInvItemId').text();
                var vInvItemName = $(this).find('.divInvItemName').text();

                // Check Result
                if (vInvItemCode.search(vSearchInput) != -1 || vInvItemName.search(vSearchInput) != -1) {

                    // Show Results
                    $(this).addClass('d-flex');
                    $(this).removeClass('d-none');
                }
                else {
                    // Hide
                    $(this).addClass('d-none');
                    $(this).removeClass('d-flex');
                }

            })

        }
        else {
            // Show All
            $(this).removeClass('d-none');
            $(this).addClass('d-flex');
        }
    })
</script>
