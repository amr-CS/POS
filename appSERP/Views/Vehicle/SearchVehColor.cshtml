@using appSERP.appCode.SQL.QueryType
@using appSERP.Views.Shared.appResource
@using appSERP.appCode.Setting.User
@{
    ViewBag.Title = "VehColorSearch";
    Layout = "~/Views/Shared/appLayout/_ModalLayout.cshtml";
}

<style>
    .divVehColor {
        max-height: 80vh;
        overflow: scroll;
    }

    .divVehColorSelect {
        cursor: pointer;
        transition: all 0.5s;
    }

        .divVehColorSelect:hover {
            font-weight: bold;
            background-color: #2980b9;
            color: #FFF;
        }

    .divVehColorNo {
        width: 60px;
    }
</style>

<!-- Header -->
<div class="">
    <div class="w-100 bg-white border font-weight-bold p-4">@appResource.lblVehColor</div>
</div>

<!-- Search -->
<div class="">
    <div class="w-100 bg-white border p-4">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fa fa-search"></i></span>
            </div>
            <input type="text" class="form-control txtSearch" placeholder="@appResource.btnSearch">
        </div>
    </div>
</div>
<div class="divVehColor">
    <table class="table table-bordered tblData border">
        <thead>
        </thead>
        <tbody class="tblBodyVehColor"></tbody>
    </table>
</div>


<!-- VehColor GET -->
<script>

    // On Load
    $(document).ready(function () {

        // Focus on Search
        $('.txtSearch').focus();

        // VehColor GET
        funVehColorGET();
    })

    // VehColor GET
    function funVehColorGET() {

        $.get('/api/APIVehColor/VehColorGET',
            {


            }, function (data, status) {

                // JSON
                var vDataResult = JSON.parse(data);
                // Table Body
                var vTableBody = $('.tblBodyVehColor');


                // VehColors
                $.each(vDataResult, function (i, VehColorData) {

                    var vRowContent = '<tr data-id="' + vDataResult[i].VehColorId + '">';

                    var vVehColorName = vDataResult[i].LookupDtlDesc;
                        if ('@clsUser.vUserLanguageId' == '2') {
                            vVehColorName = vDataResult[i].LookupDtlDesc;
                        }

                    vRowContent += '<td data-id="' + vDataResult[i].LookupDtlId + '">';
                    vRowContent += '<div class="divVehColorSelect d-flex p-2" data-id="' + vDataResult[i].LookupDtlId + '">';
                    vRowContent += '<div class="divVehColorNo px-4">' + vDataResult[i].CodeId  + '</div>';
                                vRowContent += '<div class="divVehColorName px-4">' + vVehColorName + '</div>';
                            vRowContent += '</div>';
                        vRowContent += '</td>';

                    vRowContent += '</tr>';

                    // Append Row Content
                    vTableBody.append(vRowContent);
                })

            })
    }

</script>

<!-- Search VehColor -->
<script>
    // Search
    $('.txtSearch').on('keyup', function () {

        // Search Input
        var vSearchInput = $(this).val();

        if (vSearchInput) {

            // Check All
            $('.divVehColorSelect').each(function () {

                // Get VehColor Code
                var vVehColorCode = $(this).find('.divVehColorNo').text();
                var vVehColorName = $(this).find('.divVehColorName').text();

                if (vVehColorCode.search(vSearchInput) != -1 || vVehColorName.search(vSearchInput) != -1) {

                    //$(this).addClass('table-success');
                    //$(this).hide();
                    $(this).addClass('d-flex');
                    $(this).removeClass('d-none');

                    console.log('found')
                }
                else {
                    //$(this).removeClass('table-success');
                    //$(this).show();
                    $(this).addClass('d-none');
                    $(this).removeClass('d-flex');
                }

            })

        }
        else {
            //$('.divVehColorSelect').removeClass('table-success');
            //$(this).show();
            $('.divVehColorSelect').each(function () {
                    $(this).addClass('d-flex');
                    $(this).removeClass('d-none');
            })
        }
    })
</script>



