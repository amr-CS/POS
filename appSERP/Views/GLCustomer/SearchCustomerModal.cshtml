@using appSERP.appCode.SQL.QueryType
@using appSERP.Views.Shared.appResource
@using appSERP.appCode.Setting.User
@{
    ViewBag.Title = "SearchCustomerModal";
    Layout = "~/Views/Shared/appLayout/_ModalLayout.cshtml";
}

<style>
    .divCustomer {
        max-height: 80vh;
        overflow: scroll;
    }

    .divCustomerSelect {
        cursor: pointer;
        transition: all 0.5s;
    }

        .divCustomerSelect:hover {
            font-weight: bold;
            background-color: #2980b9;
            color: #FFF;
        }

    .divCustomerNo {
        width: 60px;
    }
</style>


<!-- Header -->
<div class="">
    <div class="w-100 bg-white border font-weight-bold p-4">@appResource._Customer</div>
</div>

<!-- Search -->
<div class="">
    <div class="w-100 bg-white border p-4">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fa fa-search"></i></span>
            </div>
            <input type="text" class="form-control txtSearch" placeholder="@appResource.btnSearch">
        </div>
    </div>
</div>
<div class="divCustomer">
    <table class="table table-bordered tblData border">
        <thead>
            <tr>
                <th>الكود</th>
                <th>الاسم</th>
                <th>التليفون</th>

            </tr>
        </thead>
        <tbody class="tblBodyCustomer"></tbody>
    </table>
</div>


<!-- Customer GET -->
<script>

    // On Load
    $(document).ready(function () {

        // Focus on Search
        $('.txtSearch').focus();

        //// Customer GET
       funCustomerGET();
    })

    // Customer GET
    function funCustomerGET() {
        $.get('/api/APICustomerSupplier/CustomerSupplierGET',
            {
                pIsCustomer: true,
                // Query Type Id
                pQueryTypeId: '401',

            }, function (data, status) {
                // JSON
                var vDataResult = JSON.parse(data);
                // Table Body
                var vTableBody = $('.tblBodyCustomer');


                // Customers
                $.each(vDataResult, function (i, CustomerData) {

                      
                    var vRowContent = '<tr class="divCustomerSelect" data-id="' + vDataResult[i].CustomerId + '">';

                    var vCustomerName = vDataResult[i].CustomerNameL1;
                        if ('@clsUser.vUserLanguageId' == '2') {
                            vCustomerName = vDataResult[i].CustomerNameL2; }
                    vRowContent += '<td data-id="' + vDataResult[i].CSId + '">';
                    vRowContent += '<div class="divCustomerSelect divCSSelect d-none d-flex p-2" data-id="' + vDataResult[i].CustomerId + '">';
                    vRowContent += '<div class="divCustomerNo text-center  px-4">' + vDataResult[i].CustomerCode + '</div>';
                 
                    vRowContent += '<div class="divCustomerAddress d-none  px-4">' + vDataResult[i].CustomerAddress + '</div>';
                    vRowContent += '</div>';
                    vRowContent += '</td>';
                    vRowContent += '<td data-id="' + vDataResult[i].CSId + '">';
                    vRowContent += '<div class="divCustomerName text-center divCSSelect  px-4" >' + vCustomerName +'</div>';
                    vRowContent += '</div>';
                    vRowContent += '</td>';
                    vRowContent += '<td data-id="' + vDataResult[i].CSId + '">';
                    vRowContent += '<div class="divCustomerPhoneNumber text-center divCSSelect   px-4" >' + vDataResult[i].CustomerPhoneNumber + '</div>';
                    vRowContent += '</div>';
                    vRowContent += '</td>';
         
                    vRowContent += '</tr>';

                    // Append Row Content
                    vTableBody.append(vRowContent);
                })

            })
    }

</script>

<!-- Search Customer -->
<script>

 

    $(document).ready(function () {
        $(".txtSearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $(".tblData tbody tr ").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

